        <StackPanel  Grid.Row="1">
            <Pivot >
                <PivotItem Header="Width">




                    <StackPanel>




                        <TextBlock Text="Horizontal Fill Behavior:"/>
                        <StackPanel Orientation="Horizontal">
                            <RadioButton GroupName="HorizontalBehaviorRadioGroup" IsChecked="True"  Tag="Standard" Content="Standard" Click="RadioHorizontalBehavior_Click"/>
                            <RadioButton GroupName="HorizontalBehaviorRadioGroup"  Tag="MinSizeOnlyIfAvailable" Content="Min Size Only If Available" Click="RadioHorizontalBehavior_Click"/>
                            <RadioButton GroupName="HorizontalBehaviorRadioGroup" Tag="StretchToMaxSizeIfPossible" Content="Stretch To Max Size If Possible" Click="RadioHorizontalBehavior_Click"/>
                        </StackPanel>

                        <CheckBox x:Name="MinimumWidthCheckbox" Content="Set Minimum" Click="MinimumWidthCheckbox_Click"/>
                        <Slider x:Name="MinimumWidthSlider" 
                   Minimum="100" Value="500" Maximum="2000"
                    Visibility="Collapsed"/>


                        <CheckBox x:Name="MaximumWidthCheckbox" Content="Set Maximum" Click="MaximumWidthCheckbox_Click"/>
                        <Slider x:Name="MaximumWidthSlider" 
                    Minimum="100" Value="1000" Maximum="2000"
                    Visibility="Collapsed"/>

                        <TextBlock Text="Horizontal Alignment"/>
                        <StackPanel Orientation="Horizontal">
                            <RadioButton Content="Left"   IsChecked="True" Tag="Left" Click="HorizontalAlignmentRadio_Click" GroupName="HorizontalRadioGroup"/>
                            <RadioButton Content="Center" Tag="Center" Click="HorizontalAlignmentRadio_Click" GroupName="HorizontalRadioGroup"/>
                            <RadioButton Content="Right" Tag="Right" Click="HorizontalAlignmentRadio_Click" GroupName="HorizontalRadioGroup"/>
                            <RadioButton Content="Stretch" Tag="Stretch" Click="HorizontalAlignmentRadio_Click" GroupName="HorizontalRadioGroup"/>
                        </StackPanel>
                    </StackPanel>
                </PivotItem>
                <PivotItem Header="Height">

